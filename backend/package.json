{
    "name": "@magnit/backend",
    "version": "1.0.0",
    "description": "",
    "license": "MIT",
    "author": "",
    "scripts": {
        "build": "rimraf dist && tsc -p tsconfig.build.json",
        "clean": "rimraf dist docs logs",
        "docs:build": "compodoc -p tsconfig.json -d docs --disableCoverage --customFavicon ./assets/favicon.ico",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect dist/main.js\"",
        "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
        "start:prod": "node dist/main.js | tee logs/server.log",
        "test": "cross-env NODE_ENV=testing jest",
        "test:cov": "cross-env NODE_ENV=testing jest --coverage",
        "test:debug": "cross-env NODE_ENV=testing node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "cross-env NODE_ENV=testing jest --config ./test/jest-e2e.json",
        "test:watch": "cross-env NODE_ENV=testing jest --watch"
    },
    "jest": {
        "coverageDirectory": "../coverage",
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testEnvironment": "node",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        }
    },
    "dependencies": {
        "@nest-modules/mailer": "^1.1.3",
        "@nestjs/common": "^6.10.14",
        "@nestjs/core": "^6.10.14",
        "@nestjs/platform-express": "^6.10.14",
        "@nestjs/swagger": "^3.1.0",
        "@nestjs/typeorm": "^6.2.0",
        "@types/activedirectory2": "^1.2.1",
        "@types/amqplib": "^0.5.13",
        "@types/jsonwebtoken": "^8.3.6",
        "@types/lodash": "^4.14.149",
        "@types/multer": "^1.3.10",
        "@types/nodemailer": "^6.2.2",
        "@types/pino": "^5.15.3",
        "activedirectory2": "^1.3.0",
        "cache-manager": "^2.10.1",
        "class-transformer": "^0.3.1",
        "class-validator": "^0.11.0",
        "compression": "^1.7.4",
        "cross-env": "^6.0.3",
        "express-pino-logger": "^4.0.0",
        "firebase-admin": "^8.9.1",
        "helmet": "^3.21.2",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.19",
        "multer": "^1.4.2",
        "nest-schedule": "^0.6.4",
        "nestjs-amqp": "^0.1.9",
        "node-mocks-http": "^1.8.0",
        "pg": "^7.17.1",
        "pino": "^5.16.0",
        "pino-pretty": "^3.4.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.0",
        "swagger-ui-express": "^4.1.2",
        "typeorm": "^0.2.20",
        "typeorm-transactional-cls-hooked": "^0.1.8",
        "typescript": "^3.7.5",
        "xlsx": "^0.17.0"
    },
    "devDependencies": {
        "@compodoc/compodoc": "^1.1.11",
        "@nestjs/testing": "^6.10.14",
        "@types/express": "^4.17.2",
        "@types/jest": "^24.9.0",
        "@types/node": "^13.1.7",
        "@types/supertest": "^2.0.8",
        "jest": "^24.9.0",
        "supertest": "^4.0.2",
        "ts-jest": "^24.3.0",
        "ts-node": "^8.6.2",
        "tsc-watch": "^4.0.0",
        "tsconfig-paths": "^3.9.0",
        "tslint": "^5.20.1"
    }
}

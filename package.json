{
    "name": "magnit",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "frontend",
        "packages/*"
    ],
    "scripts": {
        "build:backend": "lerna run --scope @magnit/backend build --stream --no-prefix",
        "build:frontend": "lerna run --scope @magnit/frontend build --stream --no-prefix",
        "build:lib": "lerna run build:lib --stream",
        "build:dev": "lerna run build:dev --stream",
        "clean": "lerna run clean",
        "commit": "git-cz",
        "deploy:frontend": "yarn build:frontend && gh-pages -d frontend/build -b release/frontend",
        "deploy:no-lib": "lerna run --scope @magnit/frontend build:no-lib --stream --no-prefix && gh-pages -d frontend/build -b release/frontend",
        "docs:build": "lerna run docs:build --stream",
        "lint": "eslint . --fix",
        "pretty": "concurrently -n ts,js,json,html,yml,md \"prettier --write ./**/*.ts\" \"prettier --write ./**/*.js\" \"prettier --write ./**/*.json\"  \"prettier --write ./**/*.html\"  \"prettier --write ./**/*.yml\" \"prettier --write ./**/*.md\"",
        "start": "concurrently -n backend,frontend \"yarn start:backend\" \"yarn build:frontend && serve -s frontend/build -p 80\"",
        "start:backend": "lerna run --scope @magnit/backend start:prod --stream",
        "start:frontend": "lerna run --scope @magnit/frontend start --stream",
        "update:deps": "yarn upgrade-interactive --latest",
        "watch:lib": "lerna run watch:lib --stream --parallel --no-bail"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "dependencies": {
        "@babel/core": "^7.8.7",
        "@babel/preset-env": "^7.8.7",
        "@babel/preset-react": "^7.8.7",
        "@typescript-eslint/eslint-plugin": "^2.16.0",
        "@typescript-eslint/parser": "^2.16.0",
        "babel-loader": "^8.0.6",
        "babel-plugin-emotion": "^10.0.27",
        "babel-plugin-lodash": "^3.3.4",
        "circular-dependency-plugin": "^5.2.0",
        "concurrently": "^5.0.0",
        "cross-env": "^6.0.3",
        "duplicate-package-checker-webpack-plugin": "^3.0.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-config-react-app": "^5.0.2",
        "eslint-plugin-flowtype": "^4.6.0",
        "eslint-plugin-import": "^2.20.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-react": "^7.18.0",
        "eslint-plugin-react-hooks": "^2.3.0",
        "fork-ts-checker-webpack-plugin": "^3.1.1",
        "hard-source-webpack-plugin": "^0.13.1",
        "lerna": "^3.20.2",
        "peer-deps-externals-webpack-plugin": "^1.0.4",
        "pm2": "^4.1.2",
        "rimraf": "^3.0.0",
        "serve": "^11.3.0",
        "speed-measure-webpack-plugin": "^1.3.1",
        "terser-webpack-plugin": "^2.3.2",
        "thread-loader": "^2.1.3",
        "ts-loader": "^6.2.0",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "typescript": "^3.7.5",
        "webpack": "^4.41.5",
        "webpack-bundle-analyzer": "^3.6.0",
        "webpack-cli": "^3.3.9"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "commitizen": "^4.0.3",
        "cz-conventional-changelog": "^3.0.2",
        "gh-pages": "^2.2.0",
        "husky": "^4.0.10",
        "lint-staged": "^9.4.3",
        "prettier": "^1.19.1",
        "pretty-quick": "^2.0.1"
    }
}

{
    "name": "@magnit/backend",
    "version": "0.0.1",
    "description": "",
    "license": "MIT",
    "author": "",
    "scripts": {
        "build": "rimraf dist && tsc -p tsconfig.build.json",
        "clean": "rimraf dist docs logs",
        "docs:build": "compodoc -p tsconfig.json -d docs --disableCoverage --customFavicon ./assets/favicon.ico",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
        "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
        "start:prod": "node dist/main.js | tee logs/server.log",
        "test": "cross-env NODE_ENV=testing jest",
        "test:cov": "cross-env NODE_ENV=testing jest --coverage",
        "test:debug": "cross-env NODE_ENV=testing node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "cross-env NODE_ENV=testing jest --config ./test/jest-e2e.json",
        "test:watch": "cross-env NODE_ENV=testing jest --watch"
    },
    "jest": {
        "coverageDirectory": "../coverage",
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testEnvironment": "node",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        }
    },
    "dependencies": {
        "@nest-modules/mailer": "^1.1.3",
        "@nestjs/common": "^6.5.3",
        "@nestjs/core": "^6.5.3",
        "@nestjs/platform-express": "^6.5.3",
        "@nestjs/swagger": "^3.1.0",
        "@nestjs/typeorm": "^6.1.3",
        "@types/amqplib": "^0.5.13",
        "@types/multer": "^1.3.9",
        "@types/nodemailer": "^6.2.1",
        "@types/pino": "^5.8.9",
        "cache-manager": "^2.10.0",
        "compression": "^1.7.4",
        "express-pino-logger": "^4.0.0",
        "helmet": "^3.20.0",
        "multer": "^1.4.2",
        "nestjs-amqp": "^0.1.5",
        "pg": "^7.12.1",
        "pino": "^5.13.2",
        "pino-pretty": "^3.2.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.0",
        "swagger-ui-express": "^4.0.7",
        "typeorm": "^0.2.18",
        "typeorm-transactional-cls-hooked": "^0.1.8",
        "xlsx": "^0.15.1"
    },
    "devDependencies": {
        "@compodoc/compodoc": "^1.1.10",
        "@nestjs/testing": "^6.5.3",
        "@types/express": "^4.17.1",
        "@types/jest": "^24.0.18",
        "@types/node": "^12.7.2",
        "@types/supertest": "^2.0.8",
        "jest": "^24.9.0",
        "prettier": "^1.18.2",
        "supertest": "^4.0.2",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.3.0",
        "tsc-watch": "^2.4.0",
        "tsconfig-paths": "^3.8.0",
        "tslint": "^5.18.0",
        "typescript": "^3.5.3"
    }
}
